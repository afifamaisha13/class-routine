  <script>
    const defaultConfig = {
      background_color: "#0f172a",
      card_color: "#1e293b",
      primary_color: "#667eea",
      text_color: "#f1f5f9",
      accent_color: "#764ba2",
      font_family: "Inter",
      font_size: 16,
      main_title: "Class Routine Management System",
      subtitle: "A Firebase-Powered Scheduling Solution",
      project_description: "An interactive web application designed to streamline class schedule management with real-time updates and intuitive user interface",
      features_title: "Key Features",
      tech_stack_title: "Technology Stack"
    };

    const features = [
      { icon: "üìÖ", title: "Dynamic Scheduling", desc: "Real-time class schedule updates" },
      { icon: "üîî", title: "Smart Notifications", desc: "Automated reminders for classes" },
      { icon: "üë•", title: "Multi-User Support", desc: "Separate views for students & teachers" },
      { icon: "üìä", title: "Analytics Dashboard", desc: "Track attendance and performance" }
    ];

    const techStack = [
      { name: "HTML5", color: "#E34F26", icon: "üåê" },
      { name: "CSS3", color: "#1572B6", icon: "üé®" },
      { name: "JavaScript", color: "#F7DF1E", icon: "‚ö°" },
      { name: "Firebase", color: "#FFCA28", icon: "üî•" }
    ];

    function renderPoster(config) {
      const container = document.getElementById('poster-container');
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFont = 'system-ui, -apple-system, sans-serif';
      const fontStack = `${customFont}, ${baseFont}`;
      const baseSize = config.font_size || defaultConfig.font_size;
      
      const bgColor = config.background_color || defaultConfig.background_color;
      const cardColor = config.card_color || defaultConfig.card_color;
      const primaryColor = config.primary_color || defaultConfig.primary_color;
      const textColor = config.text_color || defaultConfig.text_color;
      const accentColor = config.accent_color || defaultConfig.accent_color;
      
      container.style.backgroundColor = bgColor;
      container.style.fontFamily = fontStack;
      
      container.innerHTML = `
        <div class="min-h-full p-8" style="background-color: ${bgColor}; color: ${textColor};">
          <!-- Header Section -->
          <header class="text-center mb-12 animate-fade-in-up">
            <div class="inline-block mb-4 animate-pulse-once">
              <div class="w-24 h-24 mx-auto rounded-full flex items-center justify-center text-5xl" 
                   style="background: linear-gradient(135deg, ${primaryColor}, ${accentColor});">
                üìö
              </div>
            </div>
            <h1 id="main-title" class="mb-4 font-bold" 
                style="font-size: ${baseSize * 2.5}px; color: ${textColor};">
              ${config.main_title || defaultConfig.main_title}
            </h1>
            <p id="subtitle" class="opacity-90" 
               style="font-size: ${baseSize * 1.25}px; color: ${textColor};">
              ${config.subtitle || defaultConfig.subtitle}
            </p>
          </header>

          <!-- Description Card -->
          <div class="max-w-4xl mx-auto mb-12 animate-fade-in-up delay-1">
            <div class="rounded-2xl p-8 card-hover" 
                 style="background-color: ${cardColor}; border-left: 4px solid ${primaryColor};">
              <p id="project-description" class="leading-relaxed" 
                 style="font-size: ${baseSize * 1.125}px; color: ${textColor};">
                ${config.project_description || defaultConfig.project_description}
              </p>
            </div>
          </div>

          <!-- Features Grid -->
          <div class="max-w-6xl mx-auto mb-12">
            <h2 id="features-title" class="text-center mb-8 font-bold animate-fade-in-up delay-2" 
                style="font-size: ${baseSize * 2}px; color: ${primaryColor};">
              ${config.features_title || defaultConfig.features_title}
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              ${features.map((feature, index) => `
                <div class="rounded-xl p-6 text-center card-hover animate-fade-in-up delay-${index + 3}" 
                     style="background-color: ${cardColor};">
                  <div class="text-4xl mb-3">${feature.icon}</div>
                  <h3 class="font-bold mb-2" 
                      style="font-size: ${baseSize * 1.125}px; color: ${textColor};">
                    ${feature.title}
                  </h3>
                  <p class="opacity-80" 
                     style="font-size: ${baseSize * 0.875}px; color: ${textColor};">
                    ${feature.desc}
                  </p>
                </div>
              `).join('')}
            </div>
          </div>

          <!-- Technology Stack -->
          <div class="max-w-4xl mx-auto">
            <h2 id="tech-title" class="text-center mb-8 font-bold animate-slide-left" 
                style="font-size: ${baseSize * 2}px; color: ${primaryColor};">
              ${config.tech_stack_title || defaultConfig.tech_stack_title}
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
              ${techStack.map((tech, index) => `
                <div class="rounded-xl p-6 text-center card-hover animate-slide-${index % 2 === 0 ? 'left' : 'right'} delay-${index + 1}" 
                     style="background-color: ${cardColor}; border-top: 3px solid ${tech.color};">
                  <div class="text-4xl mb-3">${tech.icon}</div>
                  <h3 class="font-bold" 
                      style="font-size: ${baseSize}px; color: ${textColor};">
                    ${tech.name}
                  </h3>
                </div>
              `).join('')}
            </div>
          </div>

          <!-- Footer Badge -->
          <div class="text-center mt-12 animate-fade-in-up delay-5">
            <div class="inline-block px-6 py-3 rounded-full" 
                 style="background: linear-gradient(135deg, ${primaryColor}, ${accentColor}); color: white; font-size: ${baseSize * 0.875}px;">
              ‚ú® Built with Modern Web Technologies
            </div>
          </div>
        </div>
      `;
    }

    async function onConfigChange(config) {
      renderPoster(config);
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              window.elementSdk.setConfig({ background_color: value });
            }
          },
          {
            get: () => config.card_color || defaultConfig.card_color,
            set: (value) => {
              config.card_color = value;
              window.elementSdk.setConfig({ card_color: value });
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              window.elementSdk.setConfig({ text_color: value });
            }
          },
          {
            get: () => config.primary_color || defaultConfig.primary_color,
            set: (value) => {
              config.primary_color = value;
              window.elementSdk.setConfig({ primary_color: value });
            }
          },
          {
            get: () => config.accent_color || defaultConfig.accent_color,
            set: (value) => {
              config.accent_color = value;
              window.elementSdk.setConfig({ accent_color: value });
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => config.font_family || defaultConfig.font_family,
          set: (value) => {
            config.font_family = value;
            window.elementSdk.setConfig({ font_family: value });
          }
        },
        fontSizeable: {
          get: () => config.font_size || defaultConfig.font_size,
          set: (value) => {
            config.font_size = value;
            window.elementSdk.setConfig({ font_size: value });
          }
        }
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ["main_title", config.main_title || defaultConfig.main_title],
        ["subtitle", config.subtitle || defaultConfig.subtitle],
        ["project_description", config.project_description || defaultConfig.project_description],
        ["features_title", config.features_title || defaultConfig.features_title],
        ["tech_stack_title", config.tech_stack_title || defaultConfig.tech_stack_title]
      ]);
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }

    renderPoster(defaultConfig);
  </script>
